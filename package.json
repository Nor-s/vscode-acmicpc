{
    "name": "vscode-acmicpc",
    "displayName": "vscode-acmicpc",
    "description": "baekjoon vscode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-acmicpc.helloWorld",
        "onView:acmicpc-sidebar"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "acmicpc.previewProblem",
                "title": "Preview Problem",
                "category": "Acmicpc",
                "when": "config.acmicpc.enabled"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "acmicpc",
                    "title": "Acmicpc",
                    "icon": "resources/acmicpc.svg",
                    "when": "config.acmicpc.enabled"
                }
            ]
        },
        "views": {
            "acmicpc": [
                {
                    "id": "acmicpc-sidebar",
                    "name": "Problems",
                    "icon": "resources/acmicpc.svg",
                    "contextualTitle": "Acmicpc",
                    "when": "config.acmicpc.enabled"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "acmicpc.previewProblem",
                    "when": "config.acmicpc.enabled&&view == amicpc-sidebar && viewItem =~ /problem*/",
                    "group": "acmicpc@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "acmicpc.previewProblem",
                    "when": "never"
                }
            ],
            "editor/context": [
                {
                    "submenu": "acmicpc.editorAction",
                    "when": "config.acmicpc.enabled"
                }
            ],
            "acmicpc.editorAction": [
                {
                    "command": "acmicpc.previewProblem",
                    "group": "acmicpc@4",
                    "when": "config.acmicpc.enabled"
                }
            ]
        },
        "submenus": [
            {
                "id": "acmicpc.editorAction",
                "label": "Acmicpc"
            }
        ],
        "configuration": [
            {
                "title": "acmicpc workbook",
                "properties": {
                    "acmicpc.enabled": {
                        "type": "boolean",
                        "default": false,
                        "description": "Enable extension (use this to provide workspace-specific setup)"
                    },
                    "acmicpc.workbookList": {
                        "type": "array",
                        "default": [
                            "https://www.acmicpc.net/workbook/view/1152",
                            "https://www.acmicpc.net/workbook/view/2771"
                        ],
                        "items": {
                            "type": "string"
                        },
                        "description": "workbook url. ex)https://www.acmicpc.net/workbook/view/1152"
                    },
                    "acmicpc.user": {
                        "type": "string",
                        "default": [],
                        "description": "user id"
                    },
                    "acmicpc.colorizeProblems": {
                        "type": "boolean",
                        "default": true,
                        "scope": "application",
                        "description": "Add difficulty badge and colorize problems files in explorer tree."
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.11",
        "@types/lodash": "^4.14.170",
        "@types/markdown-it": "0.0.7",
        "@types/mocha": "^2.2.42",
        "@types/node": "^14.14.33",
        "@types/require-from-string": "^1.2.0",
        "@types/vscode": "1.57.0",
        "tslint": "^5.20.1",
        "typescript": "^4.3.2",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "cheerio": "^1.0.0-rc.10",
        "fs-extra": "^10.0.0",
        "highlight.js": "^10.7.2",
        "lodash": "^4.17.21",
        "markdown-it": "^8.4.2",
        "require-from-string": "^2.0.2",
        "ts-loader": "^9.2.6",
        "tslib": "^2.3.1"
    }
}
